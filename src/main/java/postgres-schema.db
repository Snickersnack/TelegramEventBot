CREATE TABLE events(
	event_id BIGINT NOT NULL,
	event_text VARCHAR(255),
	event_host INT,
	event_host_first VARCHAR(255), 
	event_input_stage INT, 
	event_name VARCHAR(255),
	event_location VARCHAR(255),
	event_date VARCHAR(255),
	imgur VARCHAR(255),
	time_created timestamp without time zone NOT NULL default now(),
	CONSTRAINT event_id_pk PRIMARY KEY (event_id)
);


CREATE TABLE inline_message(
	inline_message_id VARCHAR(255),
	event_id BIGINT,
	CONSTRAINT inline_id_pk PRIMARY KEY (inline_message_id),
	CONSTRAINT inline_id_fk FOREIGN KEY (event_id) REFERENCES events(event_id)

);

CREATE TABLE total_responses(
	response_id BIGSERIAL,
	event_id BIGINT, 
	attending BOOLEAN,
	user_name VARCHAR(255),
	user_id INT,
	CONSTRAINT response_id_pk PRIMARY KEY (response_id),
	CONSTRAINT response_id_fk FOREIGN KEY (event_id) REFERENCES events(event_id)
	
);


CREATE TABLE channels(
	id BIGSERIAL,
	channel_id BIGINT,
	event_id BIGINT,
	CONSTRAINT channels_id_pk PRIMARY KEY (id),
	CONSTRAINT channels_id_fk FOREIGN KEY (event_id) REFERENCES events(event_id)

);